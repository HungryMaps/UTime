<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.instinctcoder.sqlitedb.StudentDetail$PlaceholderFragment"
    android:background="@color/fondo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint ="  DÃ­as"
        android:id="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint ="Curso"
        android:id="@+id/editTextName"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <requestFocus />
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="8"
        android:hint ="Profesor"
        android:id="@+id/editTextProfesor"
        android:layout_above="@+id/textView3"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignRight="@+id/editTextName"
        android:layout_alignEnd="@+id/editTextName" >
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:hint ="Aula"
        android:id="@+id/editTextAula"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignRight="@+id/editTextProfesor"
        android:layout_alignEnd="@+id/editTextProfesor" >
    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Eliminar  "
        android:id="@+id/btnDelete"
        android:background="@color/amarillo"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Guardar  "
        android:id="@+id/btnSave"
        android:background="@color/verde1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner00"
        android:layout_below="@+id/editTextAula"
        android:layout_toRightOf="@+id/textView4"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner01"
        android:layout_below="@+id/editTextAula"
        android:layout_toRightOf="@+id/spinner00"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner02"
        android:layout_below="@+id/editTextAula"
        android:layout_toRightOf="@+id/spinner01"/>

    <Spinner
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner10"
        android:layout_below="@+id/spinner00"
        android:layout_toRightOf="@+id/textView4"/>

    <Spinner
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner11"
        android:layout_below="@+id/spinner01"
        android:layout_toRightOf="@+id/spinner10"/>
    <Spinner
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner12"
        android:layout_below="@+id/spinner02"
        android:layout_toRightOf="@+id/spinner11"/>
    <Spinner
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner20"
        android:layout_below="@+id/spinner10"
        android:layout_toRightOf="@+id/textView4"/>

    <Spinner
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner21"
        android:layout_below="@+id/spinner11"
        android:layout_toRightOf="@+id/spinner20"/>
    <Spinner
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner22"
        android:layout_below="@+id/spinner12"
        android:layout_toRightOf="@+id/spinner21"/>
    <Spinner
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner30"
        android:layout_below="@+id/spinner20"
        android:layout_toRightOf="@+id/textView4"/>
    <Spinner
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner31"
        android:layout_below="@+id/spinner21"
        android:layout_toRightOf="@+id/spinner30"/>
    <Spinner
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner32"
        android:layout_below="@+id/spinner22"
        android:layout_toRightOf="@+id/spinner31"/>
    <Spinner
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner40"
        android:layout_below="@+id/spinner30"
        android:layout_toRightOf="@+id/textView4"/>
    <Spinner
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner41"
        android:layout_below="@+id/spinner31"
        android:layout_toRightOf="@+id/spinner40"/>
    <Spinner
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner42"
        android:layout_below="@+id/spinner32"
        android:layout_toRightOf="@+id/spinner41"/>

    <Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="+"
    android:id="@+id/Mas"
    android:onClick="Agregar"
    android:layout_below="@+id/editTextAula"
    android:layout_toRightOf="@+id/spinner02" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/Menos"
        android:onClick="Quitar"
        android:layout_below="@+id/editTextAula"
        android:layout_toRightOf="@+id/Mas" />

</RelativeLayout>