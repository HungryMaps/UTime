<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.utime.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MyMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Cursos"
            android:label="@string/title_activity_cursos" >
        </activity>
        <activity
            android:name=".FechasImportantes"
            android:label="@string/title_activity_fechas_importantes" >
        </activity>
        <activity
            android:name=".Ubicaciones"
            android:label="@string/title_activity_ubicaciones" >
        </activity>
        <activity
            android:name=".Horario"
            android:label="@string/title_activity_horario" >
        </activity>
        <activity
            android:name=".Calendario"
            android:label="@string/title_activity_calendario" >
        </activity>
        <activity
            android:name=".CursoDetail"
            android:label="@string/title_activity_curso_detail" >
        </activity>
        <activity
            android:name=".NotaDetail"
            android:label="@string/title_activity_nota_detail" >
        </activity>
        <activity
            android:name=".Notas"
            android:label="@string/title_activity_notas" >
        </activity>
    </application>
    <!-- Se piden permisos para poder escribir en el calendario -->
    <uses-permission android:name="android.permission.READ_CALENDAR" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_CALENDAR" >
    </uses-permission>
<!--
